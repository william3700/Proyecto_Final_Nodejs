      <div class="container">
        <div class="card">
            <div class="card-body">
              <form action="/guardarGastos" method="post">
                <label >Tipo de gasto</label>
                <select class="form-select" aria-label="Default select example" name="tipo">
                  <option selected>Seleccione una opción</option>
                  <option value="Transporte">Transporte</option>
                  <option value="Alimentación">Alimentación</option>
                  <option value="Servicio energía eléctrica">Servicio energía eléctrica</option>
                  <option value="Servicio acueducto y alcantarillado">Servicio acueducto y alcantarillado</option>
