                  <option value="Misceláneos">Misceláneos</option>
                </select>
                <br/>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Valor</label>
                  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="valor">
                </div>
                <div class="card text-dark bg-light">
                  <div class="card-body">
                    <div class="container">
                      <label for="start">Fecha:</label>
                      <input type="date" id="start" name="fecha" value="2024-01-22" min="1970-01-01" max="2050-12-31" />
                    </div>
                  </div>
                </div>
                <br/>
                <div class="mb-3 ">
                  <label for="exampleFormControlTextarea1" class="form-label">Descripción</label>
                  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="descripcion"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
            </div>
