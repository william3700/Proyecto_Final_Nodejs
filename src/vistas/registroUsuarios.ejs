    <h3>Lista de usuarios</h3>

    <div class="container">
      <div>
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Clave</th>
                        <th scope="col">Opciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(data){ %>
                         <% for(var i=0;i < data.length;i++){ %>
                          <tr>
                            <td><%= data[i].id %></td>
                            <td><%= data[i].nombre %></td>
                            <td><%= data[i].apellido %></td>
                            <td><%= data[i].correo %></td>
                            <td><%= data[i].clave %></td>
                            <td>
                             <!-- <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Actualizar</button>-->
                              <a class="btn btn-success" href="/buscarUsuario/<%= data[i].id %>" role="button" >Actualizar</a>
                              <a class="btn btn-danger" href="/eliminarUsuario/<%= data[i].id %>" role="button">Eliminar</a>
                            </td>
                          </tr>
                         <% } %>
                      <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
    </div>
    <br/>
